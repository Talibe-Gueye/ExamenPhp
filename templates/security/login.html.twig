{% extends 'index.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}
    <div class="row">
        <div class="card col-md-6 mt-5 offset-3" style="background-color: #cbd3da">
            <div class="card-header" style="background-color: #95999c; color: white; font-size: 20px; font-weight: bold; font-family: Arial;text-align: center">Connexion</div>
            <div class="card-body">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-group" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control form-group" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div>
        <button class="btn btn-lg btn-primary form-group" type="submit">
            Se connecter
        </button>
        <a href="{{ path('app_register') }}"><div class="btn btn-secondary form-group">S'inscrire</div></a>
    </div>
</form>
        </div>
    </div>
    </div>
{% endblock %}
